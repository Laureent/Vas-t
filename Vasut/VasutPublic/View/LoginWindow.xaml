<Window x:Class="VasutPublic.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VasutPublic.View"
        mc:Ignorable="d"
        Title="Bejelentkezés" Height="450" Width="800">
    <Grid Background="#EFD9CE">
        <StackPanel Grid.Column="1">
            <Label  Content="Bejelentkezés" Margin="310,100,100,1" FontSize="30"/>
            <TextBox  x:Name="tb_Username" Margin="200,1,200,1" Height="29"/>
            <PasswordBox x:Name="tb_Password" Margin="200,20,200,1" Height="29"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btn_login" Height="50" Width="100" Margin="50,30,40,0" Click="btn_login_Click">Bejelentkezés</Button>
                <Button  x:Name="btn_register" Height="50" Width="100" Margin="50,30,40,0" Click="btn_register_Click">Regisztráció</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
